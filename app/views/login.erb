<div class="container theme-showcase" role="main">
  <div class="row">
    <% if login_error == 'cloudwick_email' %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong>Oops!</strong> You have to use Cloudwick email to login.
    </div>
    <% end %>
    <div class="col-md-3"></div>
    <div class="col-md-5">
      <br />

      <a href="/auth/google_oauth2" class="btn btn-block btn-social btn-lg btn-google-plus">
        <i class="fa fa-google-plus"></i> Sign in using Cloudwick's Google Account
      </a>

      <br />
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
