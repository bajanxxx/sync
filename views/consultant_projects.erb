                        <% end %>
                      </div> <!-- end tab content -->
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %> <!-- end projects -->
    <% else %>
      <div class="bs-callout bs-callout-info">
        <p class="lead">You havn't added any projects yet. Add projects using <code>'Add Project'</code> button</p>
      </div>
    <% end %>
  </div>
</div>

<script src="/js/bootstrap.file-input.js"></script>
<script>
$(document).ready(function() {
  $('input[type=file]').bootstrapFileInput();
  $('.file-inputs').bootstrapFileInput();

  // tooltip for project files upload
  $('.uploadprojectfiles').tooltip();
  $('.uploadprojectfilescount').tooltip();
  $('.editusecasedescription').tooltip({trigger: 'hover', 'placement': 'bottom', 'title': 'Edit usecase description'});
  $('.editrequirement').tooltip({trigger: 'hover', 'placement': 'bottom', 'title': 'Edit usecase requirement'});
  $('.editapproach').tooltip({trigger: 'hover', 'placement': 'bottom', 'title': 'Edit requirements approach'});
  $('.editeffort').tooltip({trigger: 'hover', 'placement': 'bottom', 'title': 'Edit requirements effort'});
  $('.editteameffort').tooltip({trigger: 'hover', 'placement': 'bottom', 'title': 'Edit requirements team effort'});
  $('.edittools').tooltip({trigger: 'hover', 'placement': 'bottom', 'title': 'Edit requirements tools'});
  $('.editresources').tooltip({trigger: 'hover', 'placement': 'bottom', 'title': 'Edit requirements resources'});
  $('.editinsights').tooltip({trigger: 'hover', 'placement': 'bottom', 'title': 'Edit requirements insights'});
  $('.editbenefits').tooltip({trigger: 'hover', 'placement': 'bottom', 'title': 'Edit requirements outcomes'});

  // inline editing
  $.fn.editable.defaults.mode = 'popup';
  $.fn.editable.defaults.ajaxOptions = {type: "POST"};

  // validate project files upload type
  <% if details.has_projects? %>
    <% details.projects.each do |project| %>
      $('#uploadfiles<%= project.name %>').bootstrapValidator({
        feedbackIcons: {
          valid: 'glyphicon glyphicon-ok',
          invalid: 'glyphicon glyphicon-remove',
          validating: 'glyphicon glyphicon-refresh'
        },
        fields: {
          'illustrations[]': {
            validators: {
              file: {
                extension: 'jpeg,png',
                type: 'image/jpeg,image/png',
                maxSize: 2048 * 1024,   // 2 MB
                message: 'Currently we only accept jpeg & png formats with size limit of 2MB'
              }
            }
          },
          'documents[]': {
            validators: {
              file: {
                extension: 'pdf,doc,docx',
                type: 'application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document',
                maxSize: 5120 * 1024,   // 5 MB
                message: 'Currently we only accept pdf, doc, docx files with size limit of 5MB'
              }
            }
          },
        }
      });
    <% end %>
  <% end %>

  //make username editable
  $('#firstname').editable({
    type: 'text',
    title: 'Enter firstname',
    placement: 'right',
    value: '<%= consultant.first_name %>', // initial value, will be updated and send to server side upon change
    url: '/consultant/update',
    pk: '<%= consultant.email %>', // primary key (mongo _id)
    name: 'first_name', // mongo doc_key being update
    validate: function(value) {
       if($.trim(value) == '') return 'This field is required';
    },
    success: function(response, newValue) {
      if(!response.status) return response.msg;
    },
  });

  $('#lastname').editable({
    type: 'text',
    title: 'Enter lastname',
    placement: 'right',
    value: '<%= consultant.last_name %>',
    url: '/consultant/update',
    pk: '<%= consultant.email %>',
    name: 'last_name',
    success: function(response, newValue) {
      if(!response.status) return response.msg;
    },
  });

  //make status editable
  <% if @admin_user %>
  $('#team').editable({
      type: 'text',
      title: 'Enter user team',
      placement: 'right',
      value: '<%= consultant.team %>',
      // source: '/consultant/teams', // fetch the teams avaiable from remote url
      pk: '<%= consultant.email %>',
      name: 'team',
      url: '/consultant/update',
      success: function(response, newValue) {
        if(!response.status) return response.msg;
      },
  });
  <% end %>

  $('#company').editable({
    type: 'text',
    title: 'Select your current company',
    placement: 'right',
    emptytext: 'Click here to add your current work place (client)',
    value: '<%= details.current_company %>',
    url: '/consultant/details/update',
    pk: '<%= details.consultant_id %>',
    name: 'current_company',
    success: function(response, newValue) {
      if(!response.status) return response.msg;
    }
  });

  $("#certifications").editable({
    type: 'checklist',
    title: 'Update your certifications',
    placement: 'right',
    url: '/consultant/details/update',
    separator: ',', // used to seperate values as arary from data-value
    emptytext: 'Click here to add a certification',
    source: '/deatils/certifications/possible_values',
    pk: '<%= details.consultant_id %>',
    name: 'certifications',
    success: function(response, newValue) {
      if(!response.status) return response.msg;
    },
  });

  $("#trainings").editable({
    type: 'select2',
    tpl: "<input type='text' style='width: 400px'>",
    inputclass: 'input-large',
    emptytext: 'Click here to add a training you had from internal',
    placement: 'right',
    select2: {
      tags: ['Mongodb Developer', 'Mongodb Admin']
    }
  });

  // projects inline editing
  <% if details.has_projects? %>
    <% details.projects.each do |project| %>
      $("#<%= project.name %>client").editable({
        type: 'text',
        title: 'Update the client name',
        placement: 'right',
        url: '/consultant/<%= details.consultant_id %>/details/projects/update',
        value: '<%= project.client %>',
        pk: '<%= project.name %>',
        name: 'client',
        success: function(response, newValue) {
          if (!response.status) return response.msg;
        }
      });
      $("#<%= project.name %>title").editable({
        type: 'text',
        title: 'Update the title',
        placement: 'right',
        url: '/consultant/<%= details.consultant_id %>/details/projects/update',
        value: '<%= project.title %>',
        pk: '<%= project.name %>',
        name: 'title',
        success: function(response, newValue) {
          if (!response.status) return response.msg;
        }
      });
      $("#<%= project.name %>duration").editable({
        type: 'text',
        title: 'Update the duration',
        placement: 'right',
        url: '/consultant/<%= details.consultant_id %>/details/projects/update',
        value: '<%= project.duration %>',
        pk: '<%= project.name %>',
        name: 'duration',
        success: function(response, newValue) {
          if (!response.status) return response.msg;
        }
      });
      // <a href="#" id="trainings" data-type="select2" data-pk="<%= details.consultant_id %>" data-value="<%= details.trainings && details.trainings.join(',') || '' %>" data-url="/consultant/details/update" data-title="Enter your trainings"></a>
      $("#<%= project.name %>software").editable({
        type: 'select2',
        tpl: "<input type='text' style='width: 300px'>",
        inputclass: 'input-large',
        title: 'Update the software\'s used',
        placement: 'right',
        pk: '<%= project.name %>',
        value: '<%= project.software && project.software.join(', ') %>',
        url: '/consultant/<%= details.consultant_id %>/details/projects/update',
        name: 'software',
        select2: {
          tags: ["hadoop", "hbase", "cassandra", "mongodb", "spark", "kafka", "storm"]
        },
        success: function(response, newValue) {
          if (!response.status) return response.msg;
        }
      });
      $("#<%= project.name %>management_tools").editable({
        type: 'select2',
        tpl: "<input type='text' style='width: 300px'>",
        inputclass: 'input-large',
        title: 'Update the management_tool\'s used',
        placement: 'right',
        pk: '<%= project.name %>',
        value: '<%= project.management_tools && project.management_tools.join(', ') %>',
        url: '/consultant/<%= details.consultant_id %>/details/projects/update',
        name: 'management_tools',
        select2: {
          tags: ["cm", "ambari", "puppet", "chef", "ansible", "salt", "nagios", "ganglia", "zabbix", "logstash", "splunk"]
        },
        success: function(response, newValue) {
          if (!response.status) return response.msg;
        }
      });
      $("#<%= project.name %>commercial_support").editable({
        type: 'select2',
        tpl: "<input type='text' style='width: 300px'>",
        inputclass: 'input-large',
        title: 'Update the management_tool\'s used',
        placement: 'right',
        pk: '<%= project.name %>',
        value: '<%= project.commercial_support && project.commercial_support.join(', ') %>',
        url: '/consultant/<%= details.consultant_id %>/details/projects/update',
        name: 'commercial_support',
        select2: {
          tags: ["Cloudera", "HortonWorks", "DataStax", "MapR", "10Gen", "ElasticSearch", "DataBricks"]
        },
        success: function(response, newValue) {
          if (!response.status) return response.msg;
        }
      });
      $("#<%= project.name %>pointofcontact").editable({
        type: 'select2',
        tpl: "<input type='text' style='width: 300px'>",
        inputclass: 'input-large',
        title: 'Update the point of contact\'s from vendor',
        placement: 'right',
        pk: '<%= project.name %>',
        value: '<%= project.point_of_contact && project.point_of_contact.join(', ') %>',
        url: '/consultant/<%= details.consultant_id %>/details/projects/update',
        name: 'point_of_contact',
        select2: {
          tags: []
        },
        success: function(response, newValue) {
          if (!response.status) return response.msg;
        }
      });
      <% if project.has_usecases? %>
        <% project.usecases.each_with_index do |usecase, index| %>
          $('#<%= project.name + usecase.name %>editdescription').click(function(e){
            e.stopPropagation();
