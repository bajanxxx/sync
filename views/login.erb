<div class="row">
  <div class="col-sm-7">
    <% if login_error == 'Invalid Login' %>
    <div class="panel panel-danger">
    <% else %>
    <div class="panel panel-primary">
    <% end %>
      <div class="panel-heading">
        <h3 class="panel-title">Admin Login</h3>
      </div>
      <form action="/login" method="post" class="form-horizontal" role="form">
        <% if login_error == 'Invalid Login' %>
        <div class="form-group has-error">
        <% else %>
        <div class="form-group">
        <% end %>
          <br>
          <label class="col-sm-2 control-label" for="username">Username</label>
          <div class="col-sm-7">
            <input type="email" class="form-control" name="username" id="username" placeholder="Email">
          </div>
        </div>
        <% if login_error == 'Invalid Login' %>
        <div class="form-group has-error">
        <% else %>
        <div class="form-group">
        <% end %>
          <label class="col-sm-2 control-label" for="password">Password</label>
          <div class="col-sm-7">
            <input type="password" class="form-control" name="password" id="password" placeholder="Password">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Sign in</button>
          </div>
          <hr>
          <p class="text-info col-sm-offset-2 col-sm-10">
            Need an account <a href="/signup">signup</a>
          </p>
        </div>
      </form>

      <% if login_error == 'Invalid Login' %>
      <p class="text-danger text-center">Login failed for the specified credentials.</p>
      <% end %>
    </div>
  </div>
</div>
