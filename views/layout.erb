	<body>
	  <div class="navbar navbar-default navbar-fixed-top" role="navigation">
	    <div class="container-fluid">
	      <a class="navbar-brand" href="/">Cloudwick Sync</a>
	      <div class="collapse navbar-collapse">
	      	<!-- ADMIN navigation menu -->
					<% if @admin_user %>
	        <ul class="nav navbar-nav">
	          <li><a href="/jobs">Jobs</a></li>
	          <li><a href="/consultants">Consultants</a></li>
						<li class="dropdown">
							<a href="/campaign" class="dropdown-toggle disabled">Campaign <span class="caret"></span></a>
							<ul class="dropdown-menu" role="menu">
								<li><a href="/vendors">Vendors</a></li>
								<li><a href="/customers">Customers</a></li>
							</ul>
						</li>
						<% if @requests_count != 0 %>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle disabled">Requests <span class="badge"><%= @requests_count %></span><span class="caret"></span></a>
						<% else %>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle disabled">Requests <span class="caret"></span></a>
						<% end %>
							<ul class="dropdown-menu" role="menu">
								<li><a href="/cloudservers/requests"><i class="fa fa-server"></i> Cloud Servers</a></li>
								<% if @doc_requests != 0 %>
								<li><a href="/documents"><i class="fa fa-file-text"></i> Documents <span class="badge"><%= @doc_requests %></span></a></li>
								<% else %>
								<li><a href="/documents"><i class="fa fa-file-text"></i> Documents</a></li>
								<% end %>
								<li><a href="/certifications"><i class="fa fa-certificate"></i> Certifications</a></li>
								<% if @air_requests != 0 %>
								<li><a href="/airtickets"><i class="fa fa-plane"></i> Air Tickets <span class="badge"><%= @air_requests %></span></a></li>
								<% else %>
								<li><a href="/airtickets"><i class="fa fa-plane"></i> Air Tickets</a></li>
								<% end %>
							</ul>
						</li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle disabled">Time <span class="caret"></span></a>
							<ul class="dropdown-menu" role="menu">
								<li><a href="/timesheets/pending"><i class="fa fa-pause"></i> Pending</a></li>
								<li><a href="/timesheets/approved"><i class="fa fa-thumbs-up"></i> Approved</a></li>
								<li><a href="/timesheets/<%= @username %>/<%= Time.now.strftime('%Y') %>/<%= Time.now.strftime('%U') %>"><i class="fa fa-calendar-o"></i> Timesheets</a></li>
								<li><a href="/timesheets/projects"><i class="fa fa-folder"></i> Projects</a></li>
								<li><a href="/timesheets/reports/<%= Time.now.strftime('%Y') %>/<%= Time.now.strftime('%m') %>"><i class="fa fa-area-chart"></i> Reports</a></li>
								<li><a href="/timesheets/manage"><i class="fa fa-pencil"></i> Manage</a></li>
							</ul>
						</li>
						<li><a href="/training">Training</a></li>
	        </ul>
	        <ul class="nav navbar-nav pull-right">
						<form action="/search" method="post" class="navbar-form navbar-left" role="search">
							<div class="form-group">
								<input type="text" class="form-control" name="search" id="search" placeholder="Search for job details">
							</div>
  						<input type="submit" class="btn btn-info btn-small" value="Search"/>
						</form>
						<% if @username %>
						<li><p class="navbar-text"><%= @username %> | <a href='/logout' class="navbar-link">logout</a></li>
						<% else %>
						<li><a href="/login" class="navbar-link">signin</a></li>
						<% end %>
					</ul>
					<% else %>
					<!-- consultant navigation menu -->
					<ul class="nav navbar-nav">
						<li><a href="/consultant/<%= @username %>/jobs">Jobs</a></li>
						<li><a href="/consultant/<%= @username %>/projects">Projects</a></li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle disabled">Requests <span class="caret"></span></a>
							<ul class="dropdown-menu" role="menu">
								<li><a href="/cloudservers/requests/<%= @username %>"><i class="fa fa-server"></i> CloudServers</a></li>
								<li><a href="/documents/<%= @username %>"><i class="fa fa-file-text"></i> Documents</a></li>
								<li><a href="/airtickets/<%= @username %>"><i class="fa fa-plane"></i> AirTickets</a></li>
								<li><a href="/certifications/<%= @username %>"><i class="fa fa-certificate"></i> Certifications</a></li>
							</ul>
						</li>
						<li><a href="/timesheets/<%= @username %>/<%= Time.now.strftime('%Y') %>/<%= Time.now.strftime('%U') %>">Timesheets</a></li>
						<li><a href="/training">Training</a></li>
					</ul>
					<ul class="nav navbar-nav pull-right">
						<% if @username %>
						<li><p class="navbar-text"><%= @username %> | <a href='/logout' class="navbar-link">logout</a></li>
						<% else %>
						<li><a href="/login" class="navbar-link">signin</a></li>
						<% end %>
					</ul>
					<% end %>
		    </div><!-- /.container -->
	  	</div><!-- /.navbar-inner -->
		</div><!-- /.navbar -->

		<% if flash %>
		<%= styled_flash %>
		<% end %>

		<%= yield %>

