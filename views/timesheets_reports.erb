<!-- Actual Container -->
<div class="container theme-showcase" role="main">
  <div class="page-header">
    <h2>
      Timesheet Reports
    </h2>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <strong>Timesheet Report for the month of <%= Date::MONTHNAMES[month.to_i] %> / <%= year %></strong>
    </div>
    <% if data.empty? %>
    <div class="bs-callout bs-callout-info">
      <p class="lead">No data found.</p>
    </div>
    <% else %>
    <ul class="list-group">
      <% data.each do |_email, _hours| %>
        <li class="list-group-item">
          <span><b><%= _email.to_s.split('@').first.split('.').map(&:capitalize).join(' ') %></b> has logged <code><%= _hours %></code> hours</span>
        </li>
      <% end %>
    </ul>
    <% end %>
  </div>
</div>

